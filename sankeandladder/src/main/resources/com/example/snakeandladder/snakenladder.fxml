<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.snakeandladder.snakeladdercontroller"
            prefHeight="400.0" prefWidth="600.0">

    <children>
        <ImageView fitWidth="500" fitHeight="500" layoutX="300">
            <image>
                <Image url="@../../../gameboard.jpg"/>
            </image>

        </ImageView>
        <Text layoutX="150" layoutY="350" text="Player 1"></Text>
        <ImageView fitWidth="20" fitHeight="50" layoutY="330" layoutX="100">
            <image>
                <Image url="@../../../red .png"/>
            </image>

        </ImageView>
        <Text layoutX="150" layoutY="450" text="Player 2"></Text>
        <ImageView fitWidth="20" fitHeight="50" layoutY="430" layoutX="100">
            <image>
                <Image url="@../../../purpel.png"/>
            </image>
        </ImageView>

        <ImageView fx:id="player1" fitWidth="20" fitHeight="50" layoutY="450" layoutX="250">
            <image>
                <Image url="@../../../red .png"/>
            </image>

        </ImageView>
        <ImageView fx:id="player2" fitWidth="20" fitHeight="50" layoutY="450" layoutX="270">
            <image>
                <Image url="@../../../purpel.png"/>
            </image>
        </ImageView>

        <ImageView fitWidth="100" fitHeight="80" layoutY="200" layoutX="150" onMouseClicked="#roll">
            <image>
                <Image url="@../../../dice.png"/>
            </image>
        </ImageView>

        <Text fx:id="number" layoutY="250" layoutX="120"></Text>
        <Text fx:id="changeturn" layoutY="150" layoutX="170" text="Player 1 Turn"></Text>


    </children>

</AnchorPane>
